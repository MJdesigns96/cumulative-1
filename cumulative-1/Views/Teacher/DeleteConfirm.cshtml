@model cumulative_1.Models.Teacher


@{
    ViewBag.Title = "DeleteConfirm";
}
<head>
    <link rel="stylesheet" href="~/Content/Site.css" />
</head>

<div class="containershow">
    <nav>
        <a class="navlink" href="/Teacher/Show/@Model.TeacherID">Cancel</a>
    </nav>
    <h2>Are you sure you want to delete: @Model.FirstName @Model.LastName?</h2>
    <p>This action cannot be undone.</p>
    <form method="POST" action="/Teacher/Delete/@Model.TeacherID">
        <button class="delbutton" href="">Confirm Delete</button>
    </form>      
</div>

