@model List<cumulative_1.Models.Teacher>
@{
    ViewBag.Title = "List";
    // receive the List<Teacher>
    // render the teacher information as HTML
}

<h2>List of Teachers</h2>

<p>There are @Model.Count() teachers</p>
<form method="GET" action="/Teacher/List">
    <input type="text" name="SearchKey" placeholder="Name"/>
    <input type="submit" value="Search"/>
</form>

@{ foreach(cumulative_1.Models.Teacher Teacher in Model)
    {
        <div>
            <a href="/Teacher/Show/@Teacher.TeacherID">@Teacher.FirstName @Teacher.LastName</a>
        </div>
    }}