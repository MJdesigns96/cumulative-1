@model cumulative_1.Models.Teacher
@{
    ViewBag.Title = "Update";
}
<head>
    <script src="~/Scripts/updateValidator.js"></script>
</head>

<h2>Update</h2>
<div class="container">
    <nav>
        <a class="navlink" href="/Teacher/Show/@Model">Back</a>
    </nav>
    <div style="display: none" id="hiddenDiv" value='@Html.Raw(Json.Encode(Model))'></div>
    <h2>Update a Teacher</h2>
    <h3 id="noChangeMessage" style="display:none; color:red">No changes have been proposed. Please make a change before submitting.</h3>
    <form method="POST" action="/Teacher/Update/@Model.TeacherID" id="updateTeacherForm">
        <div>
            <label for="teacherfname">First Name:</label>
            <input type="text" id="teacherfname" name="teacherfname" value="@Model.FirstName"/>
        </div>
        <div>
            <label for="teacherlname">Last Name:</label>
            <input type="text" id="teacherlname" name="teacherlname" value="@Model.LastName"/>
        </div>
        <div>
            <label for="employeenumber">Employee Number:</label>
            <input type="text" id="employeenumber" name="employeenumber" value="@Model.EmployeeNumber" />
        </div>
        <div>
            <label for="teacherHireDate">Hire Date:</label>
            <input type="date" id="teacherHireDate" name="hiredate" value="@Model.HireDate.ToString("yyyy-MM-dd")" />
        </div>
        <div>
            <label for="salary">Salary:</label>
            <input type="number" id="salary" name="salary" min="0" step=".01" value="@Model.Salary"/>
        </div>
        <div>
            <input type="submit" value="Update Author" />
        </div>
    </form>
</div>